<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %yellow([%thread]) %highlight([%level]) %green(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!--    <appender name="" class="ch.qos.logback.core.ConsoleAppender">-->
    <!--        <layout class="ch.qos.logback.classic.PatternLayout">-->
    <!--            <pattern>%d %green([%thread]) %highlight(%level) %logger{25} - %msg%n</pattern>-->
    <!--        </layout>-->
    <!--    </appender>-->

    <!-- Change to DEBUG log protocol messages -->
    <logger name="org.web3j.protocol" level="INFO"/>

    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>